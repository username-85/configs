# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!


exec_always --no-startup-id xkb-switch --i3
exec_always --no-startup-id habak -ms ~/.config/wall/wall

#workspace_auto_back_and_forth yes
hide_edge_borders smart
new_window 1pixel
#default_border pixel 3
workspace_layout tabbed
default_orientation vertical
focus_follows_mouse no
focus_wrapping force

set $mod Mod4

# disable titles
font pango:DejaVu Sans Mono 0
# pc
#font pango:Terminus(TTF) normal 9
#pc
#font -*-terminus-medium-*-*-*-12-*-*-*-*-*-iso10646-*
#laptop
#font -*-terminus-medium-*-*-*-18-*-*-*-*-*-iso10646-*

# exec
exec --no-startup-id xte "mousemove 0 0"
exec --no-startup-id ~/.bin/i3/cycle_focus.py --ignore-floating --active-workspace --delay 0

# user bind
bindsym XF86AudioMute exec --no-startup-id xte "mousemove 0 0"
#f4
#?
#f7
