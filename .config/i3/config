exec_always --no-startup-id "xsetroot -cursor_name left_ptr"
exec_always --no-startup-id "unclutter -root -idle 1 -jitter 3"
exec_always --no-startup-id "xte 'mousemove 0 0'"
exec_always --no-startup-id "hsetroot -solid '#001515'"

#workspace_auto_back_and_forth yes
hide_edge_borders both
default_border pixel 1
default_floating_border pixel 1
workspace_layout tabbed
focus_follows_mouse no
focus_wrapping force
title_align center

# with xmodmap settings it's Control_R, with setxkb it's right alt
# mod1 + control not always works
set $mod1 Mod3
# alt mod, with setxkb settings it's window key
set $mod2 Mod1
# windows mod, with setxkb settings it's control
set $mod3 Mod4

# set minimal font to disable titles
font -*-terminus-medium-*-*-*-12-*-*-*-*-*-iso10646-*

# xf86 hotkeys
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 1
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 1
bindsym XF86AudioMute exec --no-startup-id "mpc --host mute7@localhost toggle; mpc --host /tmp/mpd toggle"
bindsym XF86AudioRaiseVolume exec --no-startup-id  "mpc --host mute7@localhost volume +5; mpc --host /tmp/mpd volume +5"
bindsym XF86AudioLowerVolume exec --no-startup-id "mpc --host mute7@localhost volume -5; mpc --host /tmp/mpd volume -5"
bindsym XF86AudioPlay exec --no-startup-id "mpc --host mute7@localhost toggle; mpc --host /tmp/mpd toggle"

# other hotkeys
bindsym --release $mod3+l exec --no-startup-id ~/.bin/misc/slock
bindsym $mod1+b exec --no-startup-id "rofi -modi window,windowcd -show windowcd"
bindsym $mod1+r exec --no-startup-id ~/.bin/menu/static
bindsym $mod1+Tab workspace back_and_forth
bindsym $mod1+p focus parent;
bindsym $mod1+i focus child;
bindsym $mod1+w focus next

# no mouse scroll
bindsym button4 nop
bindsym button5 nop
# no mouse click on titles
bindsym button1 nop
bindsym button2 nop
bindsym button3 nop

# Use Mouse + this mod to drag floating windows to their wanted position
floating_modifier $mod3

# kill focused window
bindsym $mod1+c kill

# change focus
bindsym $mod1+j focus down
bindsym $mod1+k focus up
bindsym $mod1+l focus right
bindsym $mod1+h focus left

# move window/container
bindsym $mod1+$mod2+h move left
bindsym $mod1+$mod2+j move down
bindsym $mod1+$mod2+k move up
bindsym $mod1+$mod2+l move right

# split in vertical orientation
bindsym $mod1+$mod2+v split h

# split in horizontal orientation
bindsym $mod1+$mod2+s split v

# enter fullscreen mode for the focused container
bindsym $mod1+$mod2+m fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod1+$mod2+t layout stacking
bindsym $mod1+$mod2+w layout tabbed
bindsym $mod1+$mod2+e layout toggle split
bindsym $mod1+$mod2+f floating toggle

# change focus between tiling / floating windows
bindsym $mod2+space focus mode_toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws0 "0"

# center floating window
bindsym $mod3+c move absolute position center

# switch to workspace
bindsym $mod1+1 workspace number $ws1
bindsym $mod1+2 workspace number $ws2
bindsym $mod1+3 workspace number $ws3
bindsym $mod1+0 workspace $ws0

# move focused container to workspace
bindsym $mod1+$mod2+1 move container to workspace number $ws1
bindsym $mod1+$mod2+2 move container to workspace number $ws2
bindsym $mod1+$mod2+3 move container to workspace number $ws3
bindsym $mod1+$mod2+0 move container to workspace number $ws0


# layout
bindsym Print exec --no-startup-id "~/.bin/misc/set_layout_en"
bindsym --release Control+Print exec --no-startup-id "~/.bin/misc/set_layout_ru"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px
        bindsym Up resize grow height 10 px
        bindsym Down resize shrink height 10 px
        bindsym Right resize grow width 10 px

        # back to normal: Escape
        bindsym Escape mode "default"
}

bindsym $mod1+$mod2+r mode "resize"

